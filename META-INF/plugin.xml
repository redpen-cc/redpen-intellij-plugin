<idea-plugin version="2">
  <id>cc.redpen.intellij</id>
  <name>RedPen Plugin</name>
  <version>0.1</version>
  <vendor email="anton@codeborne.com" url="http://redpen.cc">RedPen</vendor>

  <description><![CDATA[
      Validates text files with RedPen
    ]]></description>

  <change-notes><![CDATA[
      Draft version
    ]]>
  </change-notes>

  <idea-version since-build="131"/>

  <extensions defaultExtensionNs="com.intellij">
    <inspectionToolProvider implementation="cc.redpen.intellij.RedPenProvider"/>
  </extensions>

  <actions>
    <action id="RedPen.Validate" class="cc.redpen.intellij.RedPenListErrors" text="RedPen: List Errors">
      <add-to-group group-id="AnalyzeMenu" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt R"/>
    </action>
  </actions>

</idea-plugin>